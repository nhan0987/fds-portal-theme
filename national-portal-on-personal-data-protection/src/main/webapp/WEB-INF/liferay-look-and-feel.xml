<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.3.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_3_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.2.0+</version>
	</compatibility>
	<theme id="national-portal-on-personal-data-protection" name="Cổng thông tin quốc gia về bảo vệ dữ liệu cá nhân">
		<template-extension>ftl</template-extension>
		<settings>
	    	<setting type="select" configurable="true" 
	        	key="theme_type" 
	    	    options="home,page,login"                   
		        value="page" >
		    </setting>
		    <setting configurable="true" key="marquee-text" type="text" value=""></setting>
        </settings>
		<page-theme>true</page-theme>
		<color-scheme id="national-portal-on-personal-data-protection" name="Cổng thông tin quốc gia về bảo vệ dữ liệu cá nhân">
			<default-cs>true</default-cs>
			<css-class>personal-data-portal</css-class>
			<color-scheme-images-path>
				${images-path}/custom-images/color-schemes/${css-class}
			</color-scheme-images-path>
		</color-scheme>
        <portlet-decorator id="borderless" name="Borderless">
            <portlet-decorator-css-class>portlet-borderless</portlet-decorator-css-class>
        </portlet-decorator>
		<portlet-decorator id="barebone" name="Barebone">
            <portlet-decorator-css-class>portlet-barebone</portlet-decorator-css-class>
        </portlet-decorator>
        <portlet-decorator id="decorate" name="Decorate">
            <default-portlet-decorator>true</default-portlet-decorator>
            <portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
        </portlet-decorator>
        <portlet-decorator id="decorate-2" name="Decorate 2">
            <portlet-decorator-css-class>portlet-decorate-2</portlet-decorator-css-class>
        </portlet-decorator>
	</theme>
</look-and-feel>